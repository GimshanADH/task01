void setup() {
  Serial.begin(115200); 
  xTaskCreate(task,"Task",1024,NULL,1,NULL);  
}

void loop() {
}

void task( void * parameter )
{
  while(1){
    pinMode (2,OUTPUT);
      
    digitalWrite(2,HIGH);
    Serial.println("Turning on the LED");
    vTaskDelay(500 / portTICK_PERIOD_MS);
    
    digitalWrite(2,LOW); 
    Serial.println("Turning off the LED");   
    vTaskDelay(500 / portTICK_PERIOD_MS);
  }
}
